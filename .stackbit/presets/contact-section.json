{
    "model": "ContactSection",
    "presets": [
        {
            "label": "Contact transparent - no media",
            "thumbnail": "images/contact-transparent-no-media.png",
            "data": {
                "colors": "colors-f",
                "title": "Contact Me",
                "text": "I'm look forward to hearing from you.",
                "form": {
                    "type": "FormBlock",
                    "elementId": "contact-form",
                    "fields": [
                        {
                            "type": "TextFormControl",
                            "name": "name",
                            "hideLabel": true,
                            "placeholder": "Your name",
                            "isRequired": "true",
                            "width": "1/2"
                        },
                        {
                            "type": "EmailFormControl",
                            "name": "email",
                            "hideLabel": true,
                            "placeholder": "Your email",
                            "isRequired": "true",
                            "width": "1/2"
                        },
                        {
                            "type": "TextareaFormControl",
                            "name": "message",
                            "label": "Tell me about your project",
                            "hideLabel": true,
                            "placeholder": "Tell me about your project",
                            "isRequired": true,
                            "width": "full"
                        },
                        {
                            "type": "CheckboxFormControl",
                            "name": "updates",
                            "label": "Sign me up to receive updates",
                            "isRequired": "false",
                            "width": "full"
                        }
                    ],
                    "submitLabel": "Send Message",
                    "styles": {
                        "self": {
                            "textAlign": "center"
                        }
                    }
                },
                "media": null,
                "styles": {
                    "self": {
                        "height": "auto",
                        "width": "narrow",
                        "padding": ["pt-28", "pb-36", "pl-4", "pr-4"],
                        "flexDirection": "row",
                        "textAlign": "center"
                    }
                }
            }
        },
        {
            "label": "Contact secondary - image right",
            "thumbnail": "images/contact-secondary-image-right.png",
